<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/static/css/main.css">
    <style>
        .plugins-header {
            text-align: center;
            margin: 3rem 0;
        }
        
        .plugins-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin: 2rem 0;
        }
        
        .plugin-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: var(--radius);
            padding: 1.5rem;
            transition: all 0.3s ease;
        }
        
        .plugin-card:hover {
            transform: translateY(-5px);
            border-color: rgba(99, 102, 241, 0.3);
            box-shadow: var(--shadow);
        }
        
        .plugin-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        
        .plugin-actions {
            display: flex;
            gap: 0.5rem;
            margin-top: 1rem;
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #94a3b8;
        }
        
        .upload-section {
            background: rgba(255, 255, 255, 0.02);
            border: 2px dashed rgba(255, 255, 255, 0.1);
            border-radius: var(--radius);
            padding: 2rem;
            text-align: center;
            margin: 2rem 0;
        }
        
        .upload-section:hover {
            border-color: rgba(99, 102, 241, 0.3);
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <div class="container">
        <div class="plugins-header">
            <h1>ðŸ§© Plugin Marketplace</h1>
            <p class="hero-subtitle">
                Extend your platform with powerful plugins
            </p>
            
            <% if (user && user.role === 'admin') { %>
                <a href="/admin/plugins/upload" class="btn btn-primary">
                    ðŸ“¤ Upload Plugin
                </a>
            <% } %>
        </div>
        
        <% if (plugins && plugins.length > 0) { %>
            <div class="plugins-grid">
                <% plugins.forEach(plugin => { %>
                    <div class="plugin-card">
                        <div class="plugin-icon">
                            <%= plugin.icon || 'ðŸ§©' %>
                        </div>
                        
                        <h3><%= plugin.name || plugin.id %></h3>
                        
                        <% if (plugin.description) { %>
                            <p style="color: #94a3b8; margin: 0.5rem 0;">
                                <%= plugin.description %>
                            </p>
                        <% } %>
                        
                        <div style="display: flex; gap: 0.5rem; margin-top: 0.5rem;">
                            <% if (plugin.version) { %>
                                <span style="background: rgba(99, 102, 241, 0.1); color: #818cf8; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.8rem;">
                                    v<%= plugin.version %>
                                </span>
                            <% } %>
                            
                            <% if (plugin.author) { %>
                                <span style="background: rgba(139, 92, 246, 0.1); color: #a78bfa; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.8rem;">
                                    <%= plugin.author %>
                                </span>
                            <% } %>
                        </div>
                        
                        <div class="plugin-actions">
                            <button onclick="loadPlugin('<%= plugin.id %>')" class="btn btn-sm btn-primary">
                                Load
                            </button>
                            
                            <button onclick="togglePlugin('<%= plugin.id %>', <%= !plugin.enabled %>)" 
                                    class="btn btn-sm <%= plugin.enabled ? 'btn-secondary' : 'btn-primary' %>">
                                <%= plugin.enabled ? 'Disable' : 'Enable' %>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">ðŸ“¦</div>
                <h3>No Plugins Yet</h3>
                <p>Upload your first plugin to get started!</p>
                
                <% if (user && user.role === 'admin') { %>
                    <a href="/admin/plugins/upload" class="btn btn-primary mt-2">
                        Upload First Plugin
                    </a>
                <% } else { %>
                    <p class="small-caps" style="margin-top: 1rem;">
                        Contact admin to add plugins
                    </p>
                <% } %>
            </div>
        <% } %>
        
        <% if (user && user.role === 'admin') { %>
            <div class="upload-section">
                <h3>ðŸ“¤ Quick Upload</h3>
                <p style="color: #94a3b8; margin: 1rem 0;">
                    Upload a .plugin.js file directly
                </p>
                
                <form id="quickUploadForm" enctype="multipart/form-data">
                    <input type="file" name="plugin" accept=".plugin.js" required
                           style="margin: 1rem 0; color: white;">
                    <button type="submit" class="btn btn-primary">
                        Upload Plugin
                    </button>
                </form>
            </div>
        <% } %>
    </div>
    
    <script>
        function loadPlugin(pluginId) {
            fetch(`/api/plugins/${pluginId}/load`, {
                method: 'POST'
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Plugin loaded successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            });
        }
        
        function togglePlugin(pluginId, enabled) {
            fetch(`/admin/plugins/${pluginId}/toggle`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ enabled })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            });
        }
        
        // Quick upload form
        document.getElementById('quickUploadForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            const response = await fetch('/admin/plugins/upload', {
                method: 'POST',
                body: formData
            });
            
            const result = await response.json();
            
            if (result.success) {
                alert('Plugin uploaded successfully!');
                location.reload();
            } else {
                alert('Upload failed: ' + result.error);
            }
        });
    </script>
</body>
</html>
